<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" prefHeight="800.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1" fillWidth="false" fx:controller="tictactoe.gui.MainController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>

    <fx:include fx:id="pointage" source="pointage.fxml"/>
    <fx:include source="plateau.fxml" fx:id="plateau" VBox.vgrow="SOMETIMES"/>
    <fx:include source="text-status.fxml" fx:id="textStatus"/>
    <Separator/>

    <Button text="Nouvelle Partie" onAction="#recommencer">
        <graphic>
            <ImageView>
                <image>
                    <Image url="image/reset.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
</VBox>